<header class="header">
<div class="header__inner">
    <div class="header__flex">
        <h1 class="header__logo"><a href="index.html"><img src="../../images/logo.png" alt=""></a></h1>
        <nav class="header__nav">
            <ul class="header__gnav" >
            <li class="header__list"><a href="index.html">HOME</a></li>
            <li class="header__list"><a href="../about/index.html">ABOUT</a></li>
            <li class="header__list"><img class="header__shop" src="../../images/shop.png" alt=""></li>
            </ul>
        </nav>
    </div>
</div>
</header>
<main class="main">
<div class="main__inner">
<section class="item">
            <h2 class="item__title">{{ title }}</h2>
                    <div class="item__flex ">
                    {% for ecs in ec %}
                        <div class="item__wrap">
                            <a class="item__link" href="./article/{{ ecs.num }}/index.html">
                        	<img class="item__img" src="../images/{{ ecs.itemphotos[0] }}" alt="">
                            <div class="item__textflex">
                                <p class="item__name">{{ ecs.name }}</p>
                                <p class="item__price">Â¥{{ ecs.price }}</p>
                            </div>
                            {% if ecs.state %}
                            <p></p>
                            {% else %}
                            <p class="item__soldout">sold out</p>
                            {% endif %}
                            </a>
                        </div>
                	{% endfor %}
                    </div>
                    <div class="center"><button class="item__btn">view more</button></div>
</section>    
</div>    
</main>
<footer class="footer">
<div class="footer__inner">
        <h1 class="footer__logo"><a href="index.njk"><img src="../../images/logo.png" alt=""></a></h1>
        <nav class="footer__nav">
            <ul class="footer__gnav" >
            <li class="footer__list"><a href="index.html">HOME</a></li>
            <li class="footer__list"><a href="../about/index.html">ABOUT</a></li>
            </ul>
        </nav>
        <small>silver.ecsite&copy;2022copyright</small>
</div>
</footer>
